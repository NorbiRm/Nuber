<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             tools:context=".NuberShoppingFragment" android:layout_height="150dp">
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_salad_button" app:layout_constraintStart_toStartOf="@+id/salad_description_edittext"
            app:layout_constraintEnd_toEndOf="@+id/salad_description_edittext"
            app:layout_constraintTop_toBottomOf="@+id/salad_description_edittext"
            app:layout_constraintHorizontal_bias="0.504"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/salad_name_edittext"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.302"
            android:hint="Salad Name:"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/salad_description_edittext"
            app:layout_constraintStart_toStartOf="@+id/salad_name_edittext"
            app:layout_constraintEnd_toEndOf="@+id/salad_name_edittext"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/salad_name_edittext"
            android:hint="Description "/>
</android.support.constraint.ConstraintLayout>